<%= form_with(url: update_user_path(@user), scope: :user, method: "put", local: true) do |form| %>
  <br><br><br>
  <% user = User.find(params[:id]) %>
  <h1>Edit <%= user.username %></h1>
  <% puts "Errors: #{params[:errors].inspect}" %>
  <% if @user.errors.count > 0 %>
    <div style="color :red; ">
    <h3><%= @user.errors.count %> errors</h3>
    <ul>
      <% @user.errors.full_messages.each do |em| %>
        <li><%= em %></li>
      <% end %>
    </ul>
    </div>
  <% end %>
  <%= form.label :email, value: "Email:" %>
  <%= form.email_field :email, value: user.email %>
  <br>
  <br>
  <%= form.label :username, value: "Username:" %>
  <%= form.text_field :username, value: user.username %>
  <br>
  <br>
  <%= form.label :password, value: "Password:" %>
  <%= form.password_field :password, value: user.password %>
  <br><br>
  <%= form.submit "Save" %>
<% end %>